<Window x:Class="LastShot.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About WKSUK Compliance Dashboard"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{DynamicResource SurfaceBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">
    <Border Padding="24" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="8">
        <StackPanel>
            <Image x:Name="BrandImage"
                   Width="128"
                   Height="128"
                   Margin="0,0,0,16"
                   HorizontalAlignment="Center"
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Stretch="Uniform" />
            <TextBlock Text="WKSUK Compliance Dashboard" FontSize="20" FontWeight="SemiBold" />
            <TextBlock Text="Version 1.0" Margin="0,8,0,0" />
            <TextBlock Text="Release date: 08/01/2026" />
            <TextBlock Margin="0,12,0,0">
                <Run Text="GitHub: " />
                <Hyperlink NavigateUri="https://github.com/wksuk" RequestNavigate="OnLinkClicked">WKSUK</Hyperlink>
            </TextBlock>
            <TextBlock Text="ORCID: 0009-0003-4038-2488" Margin="0,2,0,0" />
            <TextBlock Text="Special thanks to GPT-5.1-Codex for the assist." TextWrapping="Wrap" Margin="0,4,0,0" />
            <Separator Margin="0,16,0,16" />
            <Button Content="Close" Width="90" HorizontalAlignment="Right" Click="OnCloseClicked" />
        </StackPanel>
    </Border>
</Window>
